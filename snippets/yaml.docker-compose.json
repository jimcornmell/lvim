{
  "template": {
    "body": [
      "version: '3'",
      "",
      "services:",
      "",
      "  jims_database:",
      "    container_name: jims_database",
      "    hostname: jims_database",
      "    image: postgres",
      "    volumes:",
      "      - ./volume:/var/lib/postgresql",
      "    environment:",
      "      - POSTGRES_DB=jimsdb, jimsdb_dev",
      "      - POSTGRES_USER=mhuls",
      "      - POSTGRES_PASSWORD=aStrongPassword",
      "    ports:",
      "      - 54321:5432",
      "    restart: unless-stopped",
      "",
      "",
      "  jims_api:",
      "    container_name: jims_api",
      "    hostname: jims_api",
      "    build:",
      "      context: ./jims_api",
      "      dockerfile: Dockerfile",
      "    ports:",
      "     - 54322:5000",
      "    volumes:",
      "      - ./jims_api/src/:/usr/src/app/",
      "      - /usr/src/app/node_modules",
      "    restart: unless-stopped",
      "    environment:",
      "      NODE_ENV: ${jims_ENVIRONMENT}",
      "    depends_on:",
      "      - jims_database",
      "",
      "",
      "  jims_webserver:",
      "      container_name: jims_webserver",
      "      hostname: jims_webserver",
      "      build:",
      "          context: ./jims_webserver",
      "          dockerfile: Dockerfile",
      "      ports:",
      "        - 80:80",
      "        - 443:443",
      "      volumes:",
      "        - ./jims_webserver/src/test:/usr/share/nginx/html",
      "      restart: always",
      "      depends_on:",
      "        - jims_database",
      "$0"
    ],
    "description": "Initial Docker Compose Script",
    "prefix": "template"
  }
}
